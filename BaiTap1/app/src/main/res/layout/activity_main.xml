<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#008000"
        android:gravity="center"
        android:padding="15dp"
        android:text="Các kiểu lập trình sự kiện"
        android:textColor="#FFFFFF"
        android:textSize="20dp" />



    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Số a:"
            android:textSize="20dp" />
        <EditText
            android:layout_weight="3"
            android:id="@+id/soa"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <LinearLayout
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Số b:"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/sob"
            android:layout_weight="3"
            android:layout_marginLeft="10dp"
            android:layout_width="0dp"
            android:layout_height="match_parent" />

    </LinearLayout>
    <TextView
        android:gravity="center"
        android:textSize="30dp"
        android:textColor="#FFFFFF"
        android:id="@+id/kq"
        android:layout_width="match_parent"
        android:background="#008000"
        android:layout_height="50dp" />
    
    <Button
        android:id="@+id/btntong"
        android:layout_width="match_parent"
        android:text="tổng 2 số"
        android:textSize="20dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnhieu"
        android:layout_width="match_parent"
        android:text="hiệu 2 số"
        android:textSize="20dp"
        android:layout_height="50dp" />


    <Button
        android:id="@+id/btntich"
        android:layout_width="match_parent"
        android:text="tích 2 số"
        android:textSize="20dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btnthuong"
        android:layout_width="match_parent"
        android:text="thương 2 số"
        android:textSize="20dp"
        android:layout_height="50dp" />

    <Button
        android:id="@+id/btntucln"
        android:layout_width="match_parent"
        android:text="ước chung lớn nhất"
        android:textSize="20dp"
        android:layout_height="50dp" />
    <Button
        android:id="@+id/btnthoat"
        android:layout_width="match_parent"
        android:text="thoát chương trình"
        android:textSize="20dp"
        android:layout_height="50dp" />





</LinearLayout>
